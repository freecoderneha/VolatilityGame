<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">


        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:title="Update Profile"/>


            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="text"
                android:maxLines="1"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/black"/>

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextEmail1"
                android:editable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email id"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-condensed"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/black" />


            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextPassword1"
                android:editable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-condensed"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/black" />


            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextMobile1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile No"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:maxLines="1"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@android:color/black" />


            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextCity1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="20dp"
                android:maxLines="1"
                android:textColor="@android:color/black" />



            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextOrg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name of Organisation"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="1"
                android:textColor="@android:color/black" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextAdd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="3"
                android:textColor="@android:color/black" />
            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextUserType1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User Type"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="1"
                android:textColor="@android:color/black" />


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/appCompatButtonUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:text="Save Changes"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"/>


        </android.support.v7.widget.LinearLayoutCompat>


    </android.support.v4.widget.NestedScrollView>
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />


</RelativeLayout>